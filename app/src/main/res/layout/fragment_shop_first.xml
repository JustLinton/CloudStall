<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_common"
    android:layout_marginTop="@dimen/dimen_common_small"
    android:layout_marginEnd="@dimen/dimen_common"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_card_2"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/material_design_1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/header_text"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_card_2"
            android:layout_margin="@dimen/dimen_common"
            android:text="示例路边摊"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_card_2"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_common_small">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ownerInfoGroup"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/sepLine1"
                >
                <com.berrysdu.cloudstall.CircleImageView
                    android:id="@+id/ivicon"
                    android:layout_alignParentStart="true"
                    android:layout_width="25dp"
                    android:layout_gravity="top"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/head1"/>

                <TextView
                    android:id="@+id/owner_name"
                    android:layout_toEndOf="@id/ivicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"
                    android:text="用户3853"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />


            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/dimen_common_small"
                android:src="@drawable/ic_favorite_border_white_24dp"
                android:tint="@color/gray_deep" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/dimen_common_small"
                android:src="@drawable/ic_share_white_24dp"
                android:tint="@color/gray_deep" />
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>